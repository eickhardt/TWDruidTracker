<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame name="FeralDebuffTrackerFrame" parent="UIParent" hidden="false" movable="true" enableMouse="true">
    <Size><AbsDimension x="220" y="50"/></Size>
    <Anchors>
      <Anchor point="CENTER" relativePoint="CENTER">
        <Offset><AbsDimension x="0" y="-200"/></Offset>
      </Anchor>
    </Anchors>
    <Backdrop bgFile="Interface\\DialogFrame\\UI-DialogBox-Background"
              edgeFile="Interface\\Tooltips\\UI-Tooltip-Border"
              tile="true" tileSize="16" edgeSize="12">
      <BackgroundInsets><AbsInset left="2" right="2" top="2" bottom="2"/></BackgroundInsets>
    </Backdrop>
    <Scripts>
      <OnLoad>
        this:RegisterForDrag("LeftButton");
        this:SetClampedToScreen(true);
      </OnLoad>
      <OnMouseDown>
        FeralDebuffTracker_OnMouseDown(this, arg1);
      </OnMouseDown>
      <OnMouseUp>
        FeralDebuffTracker_OnMouseUp(this);
      </OnMouseUp>
    </Scripts>
  </Frame>
</Ui>
